<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/steps_item_list"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="@dimen/card_radius_margin"
    card_view:cardBackgroundColor="@color/color_background_card"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left">

        <TextView
            android:id="@+id/step_text_id"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="0"
            android:textColor="@color/color_steps_item_list"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/step_divider"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/step_text_id"
            android:text=" - "
            android:textColor="@color/color_steps_item_list"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/step_short_description"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_toRightOf="@+id/step_text_id"
            android:text="Step descriptions"
            android:textColor="@color/color_steps_item_list"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>