<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BakingActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarBakingTheme</item>
    </style>

    <style name="ActionBarBakingTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/color_green</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="Widget.CardContentLayout" parent="android:Widget">
        <item name="android:background">@color/color_green</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.MainContentLayout" parent="android:Widget">
        <item name="android:background">@drawable/recipe_image</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style used in the DetailActivity for the labels of the extra weather information -->
    <style name="Baking_title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/detail_accent_label</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="widget_description" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/widget_description_size</item>
        <item name="android:background">@drawable/transparent_card_widget</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

</resources>
